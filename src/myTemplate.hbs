
<div class="container"> 
    {{#each pets}}
    <div class="row">
        <div class="col">
        <img src="{{photo}}">
        </div>

        <div class="col">
        <h2>{{name}} <span class="species">({{species}})</span></h2>

        {{#if favFoods}}
        <h4 class="headline-bar">Favorite Foods</h4>
        <ul class="favorite-foods">
            {{#each favFoods}}
            <li>{{{this}}}</li>
            {{/each}}
        </ul>
        {{/if}}

        </div>
    </div>
    {{/each}}
</div>